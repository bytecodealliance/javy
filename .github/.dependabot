    schedule:
      interval: "daily"
    open-pull-requests-limit: 100
  - package-ecosystem: npm
    directory: "/npm/javy"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 100
  - package-ecosystem: npm
    directory: "/npm/javy-cli"
